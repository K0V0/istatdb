<% content_for :mainmenu do %>

	<ul class="main">

		<div>
			
			<%= active_link_to t("top_menu.goods"), goods_path, wrap_tag: :li %>

			<%= active_link_to t("top_menu.companies"), manufacturers_path, wrap_tag: :li %>

			<%= active_link_to t("top_menu.local_taric"), local_tarics_path, wrap_tag: :li %>

			<%= active_link_to t("top_menu.global_taric"), sk_tarics_path, wrap_tag: :li %>

			<%= active_link_to t("top_menu.others"), others_path, wrap_tag: :li %>

			<%= active_link_to(settings_path, class: 'has_submenu', wrap_tag: :li) do %>
				<%= t("top_menu.settings") %>
				<ul class="sub disable_on_bigscreen">
					<div>
						<%= render 'settings/shared/settings_submenu' %>
					</div>
				</ul>
				<% if is_active_link?(settings_path) %>
					<%= content_for :submenu do %>
						<%= render 'settings/shared/settings_submenu' %>
					<% end %>
				<% end %>
			<% end %>

		</div>

		<label for="show_topmenu" class="show_topmenu"> &#9776; </label>

	</ul>

	<% if content_for? :submenu %>

		<ul class="sub disable_on_smallscreen">
			<div>
				<%= content_for :submenu %>
			</div>
		</ul>

	<% end %>

<% end %>