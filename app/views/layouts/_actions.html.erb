<section class="actions <%= 'administrative' if @administrative_mode %>">
	
	<%= link_to(
		t(:new_item),
		{
			controller: controller_name,
			action: "new"
		},
		class: "button"
	) %>

	<%= link_to(
		t(:edit_items),
		{
			controller: controller_name,
			action: "administration"
		},
		class: "button" 
	) if !@administrative_mode %>

	<%= link_to( 
		t(:edit_items_finish), 
		{
			controller: controller_name,
			action: "index"
		},
		class: "button selected" 
	) if @administrative_mode %>

	<% if @administrative_mode %>

		<button
		 class="button" 
		 id="select_all_<%= controller_name %>">

			<%= t(:select_items) %>

		</button>

		<button
		 class="button" 
		 id="deselect_all_<%= controller_name %>">

			<%= t(:deselect_items) %>

		</button>

	<% end %>

	<%#= link_to(
		t(:select_items),
		{
			controller: controller_name,
			action: "administration"
		},
		class: "button"
	) if @administrative_mode %>

	<%#= link_to(
		t(:deselect_items),
		{
			controller: controller_name,
			action: "administration"
		},
		class: "button"
	) if @administrative_mode %>

	<%= link_to(
		t(:delete_items), 
		{
			controller: controller_name,
			action: "administration"
		},
		class: "button danger"
	) if @administrative_mode %>

	<%= link_to(
		t(:delete_items_all), 
		{
			controller: controller_name,
			action: "administration"
		},
		class: "button danger"
	) if @administrative_mode %>

</section>

