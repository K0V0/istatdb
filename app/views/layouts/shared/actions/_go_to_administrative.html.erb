<% klass = (action_name == "show") ? "hidden" : "" %>
<% 
output = ""

if @MEM.send("is_in_administrative_#{controller_name.singularize.underscore}").blank? 
	output = link_to(
		t('actions.administrative'),
		{
			controller: controller_name,
			action: "administrative"
		},
		remote: true,
		class: "button administration_from_search #{klass}", 
		id: "#{controller_name.singularize}_administration_from_search"
	) 

else

	output = link_to(
		t('actions.end_administrative'),
		{
			controller: controller_name,
			action: "end_administrative"
		},
		remote: true,
		class: "button selected administration_from_search #{klass}", 
		id: "#{controller_name.singularize}_administration_from_search"
	)

end 
%>
<%= output %>