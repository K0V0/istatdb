<% fields.each do |field| %>

	<% field.each do |field_name, options| %>

		<% if options.is_a? Array %>

			<%= render('layouts/shared/items_table/head',
				obj: field_name.to_s.classify.constantize,
				fields: options
			) %>

		<% else %>

			<th>
				<%= items_table_caption_decorator(options, obj, field_name) %>
			</th>

		<% end %>

	<% end %>

<% end %>