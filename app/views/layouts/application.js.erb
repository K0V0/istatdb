<% an = action_name %>

<% if an == 'index' %>

	$(document).find('body').attr('class', 'index noscroll');

<% else %>

	$(document).find('body').attr('class', '<%= an %>');

<% end %>

$(document).find('body > main > article').attr('class', '<%= an %> <%= controller_name %>');

<% if action_name=='index'||action_name=='show' %>
	
	$('main > article').empty();

<% end %>


<% if content_for? :items_table %>

	$('<%=j yield(:items_table) %>').appendTo('main > article');
	/*
	$(document).find("section.search_bar").find('input[autofocus]')
	.focus(function() {})
	.trigger('focus');
	*/

	<%= render partial: 'layouts/base/paginator' %>

<% end %>

<% if content_for? :show_content %>

	$('<%=j yield(:show_content) %>').appendTo('main > article');
	
<% end %>

<%= yield %>

