<section class="items_table decorated_wrap shrinked change_on_smallscreen">

	<table class="items rows_colored with_efects" id="good_issue_files_list">

		<caption>
			<%= t 'issues.files_list.cap' %>
		</caption>

		<thead>
			<th><%= t 'activerecord.attributes.issue.file' %></th>
			<th><%= t 'activerecord.attributes.issue.note' %></th>
			<th><%= t 'issues.files_list.created_at' %></th>
			<th><%= t 'issues.files_list.updated_at' %></th>
		</thead>

		<tbody>
			<% object.each do |file| %>

				<tr>
					<td>
						<%= link_to(file.file_identifier, file.file.url) %>
					</td>
					<td>
						<%= file.note %>
					</td>
					<td>
						<%= date_with_hours_to_human(file.created_at) %>
					</td>
					<td>
						<%= date_with_hours_to_human(file.updated_at) %>
					</td>
				</tr>

			<% end %>
		</tbody>

		<tfoot>
			<tr>
				<th colspan="10">
					<div id="items_table_total_count">
						<%= "#{t('items_table.results_count')}: " %> <b><%= "#{object.size}" %></b>
					</div>
				</th>
			</tr>
		</tfoot>

	</table>

</section>