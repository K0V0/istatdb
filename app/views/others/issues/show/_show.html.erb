
<% content_for :show_content do %>

    <% if !@impexpcompany_filter.blank? %>

        <%= render(
            '/layouts/shared/items_table/note_window',
            content: simple_format(t('issues.filter_active'), {}, wrapper_tag: :span),
            html_class: "filter_warning"
        ) %>

    <% end %>

    <%= render('layouts/shared/show_item_basic_info',
        fields: [
            [:name, :note, :season_human]
        ]
    ) %>

    <%= render('others/issues/show/add_goods', obj: @record) %>

    <%= render('layouts/shared/items_table',
        object: @for_goodstable,

        fields: {
            ident: {
                is_link: {
                    set_route_back: true
                },
                tooltip: :reason_and_note,
                image_previews: :good_images,
                link: :link,
                uoms: true,
                issues: :patale,
            },
            description: {

            },
            impexpcompanies: [
                company_name: {

                }
            ],
            manufacturers: [
                name: {
                    is_link: true,
                    set_route_back: true
                }
            ],
            local_taric: [
                kncode: {
                    fill_if_empty: true,
                    call_decorator: :num_to_kncode,
                    is_link: true,
                    clipboard_button: true,
                    tooltip: :description,
                    set_route_back: true
                }
            ]
        },

        options: [
            caption: true,
            head: true,
            foot: true,
            html_options: {
                main_class: "shrinked"
            },
            row_danger: {
                uncomplete: true
            },
            row_changed: {
                uncomplete_reason: :blank?,
                note: :blank?
            },
            not_editable: true,
            always_administrable: {
                set_route_back: true
            },
            change_on_smallscreen: true
        ]
    ) %>

    <%= render('layouts/shared/items_table',
        object: @record.impexpcompanies,

        fields: {
            company_name: {

            }
        },

        options: [
            caption: true,
            foot: true,
            html_options: {
                main_class: "shrinked"
            },
            not_editable: true,
            change_on_smallscreen: true
        ]
    ) %>

    <% if @record.good_issue_files.any? %>
        <%= render 'others/issues/show/files', object: @record.good_issue_files %>
    <% end %>

<% end %>