<article
	class="decorated_wrap shrinked images"
	id="good_images"
>

	<div class="caption">
		<%= t('activerecord.attributes.good.image') %>
	</div>

	<div class="images">
		<% #i = 0 %>

		<%= obj.fields_for :good_images do |img| %>

			<%
               # blank = img.object.image.blank?
               # i += 1
               # val = img.object.identificator.nil? ? i : ps.object.identificator
            %>

			<picture>

				<%= img.hidden_field :image_cache %>
                <%= img.hidden_field :id %>

                <%= image_tag(img.object.image) %>

                <div>
					<%= img.label(:image, t('goods.new_form_texts.select_image'), class: 'button') %>
					<%= img.file_field(:image, class: 'hidden') %>
	                <% if !img.object.image.blank? %>
	                	<br>
	                	<%= img.check_box(:_destroy) %>
	                	<%= img.label :_destroy, t('goods.new_form_texts.image_for_removal') %>
	                <% end %>
	            </div>

			</picture>

		<% end %>

	</div>

</article>