<%
fields_to_select = [
    :ident,
    :description,
    { 
        local_taric: [
            :kncode,
            :description
        ] 
    }, 
    { 
        manufacturers: [
            :name
        ]
    },
    {
        impexpcompanies: [
            :company_name
        ]
    }
]
%>


<%= form_tag(public_send("do_export_#{controller_name}_path"), method: :post) do |f| %>
    <div class="decorated_wrap shrinked">

        <table class="">

            <caption>Export</caption>

            <thead></thead>

            <tbody>
                <% fields_to_select.each do |field| %>

                    <% if field.instance_of? Hash %>

                        <% k = field.keys.first %>
                        <tr>
                            <td> <%= t("activerecord.models.#{k.to_s.singularize}") %> </td>
                            <td>
                                <table>
                                    <% field[k].each do |subfield| %>
                                        <%= render(
                                            'goods/export/export_properties_fields',
                                            mdl: "#{k.to_s.singularize}",
                                            field: subfield,
                                            name: "[#{k.to_s}][#{subfield.to_s}]"
                                        ) %>
                                    <% end %>
                                </table>
                            </td>
                        </tr>

                    <% else %>

                        <%= render(
                            'goods/export/export_properties_fields',
                            mdl: "#{controller_name.singularize}",
                            field: field,
                            name: "[#{field.to_s}]"
                        ) %>

                    <% end %>
                    
                <% end %>
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="10">
                        <input type="submit" class="button" value="Excel tabuÄ¾ka" name="submit_excel">
                        <input type="submit" class="button" value="HTML" name="submit_html">
                        <%= link_to "Storno", :back, class: 'button' %>
                    </td>
                </tr>
            </tfoot>

        </table>

    </div>
<% end %>



