		<h4> <%= t 'goods.nothing_found.text2' %>: </h4>

		<ul>

			<li>
				<%= link_to t('goods.nothing_found.text3'), new_good_path, class: "button" %>
				<%= t('goods.nothing_found.text4') %>
			</li>

			<li>
				<%= t('goods.nothing_found.text5') %>
				<button id="search_item_on_google_2" class="button">
					<%= t('goods.nothing_found.text6') %>
				</button>
				<%= t('goods.nothing_found.text7') %>
			</li>

			<li>
				<% if params[:q][:manufacturer_filter].blank? %>

					<%= t('goods.nothing_found.text8') %>
