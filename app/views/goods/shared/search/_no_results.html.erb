					<%= t('goods.nothing_found.text9') %>

				<% else %>

					<%= t('goods.nothing_found.text11') %>
					"<%= t('top_menu.companies') %>"
					<%= t('goods.nothing_found.text12') %>
					<%= link_to(
						t('goods.nothing_found.text13'),
						manufacturer_path(params[:q][:manufacturer_filter]),
