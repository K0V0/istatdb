
<%= render(
		layout: 'layouts/shared/search',
		locals: {
			main_fields: {
				ident: [:ident_or_description_cont, :ident_cont]
			},
			actions: [
				:add,
				:edit,
				:delete,
				:clear_fields,
				:clear_all,
				:administrative,
				:google_search,
				#:last_searches,
				:last_visits,
				:export
			]
		}
	) do %>

	<%= render 'goods/shared/search/search_both', obj: @s %>

	<%= render 'goods/shared/search/select_client_dropdown', obj: @s %>

	<div>
		<span>
			<%= @s.label :manufacturer_filter %>
		</span>
		<span id="search_items_select_manufacturer">
			<%= render 'layouts/shared/search/multiselect', obj: @manufacturers %>
		</span>
	</div>

	<div>
		<span>
			<%= @s.label :issue_filter %>
		</span>
		<span id="search_items_select_issue">
			<%= render 'layouts/shared/search/multiselect', obj: @issues %>
		</span>
	</div>

	<%= render 'goods/shared/search/uncomplete_filter', obj: @s %>

	<%= render 'goods/shared/search/time_filter', obj: @s %>

<% end %>

