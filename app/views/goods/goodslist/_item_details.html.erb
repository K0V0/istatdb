
<section class="item_details">

	<input type="hidden" name="good_id" id="good_id" value="<%= @good.id %>">

	<% desc = @good.description.blank? ? " --- " : @good.description %>
	<div class="tablewrap decorated_wrap">
		<%= render('layouts/table', 
			object: @good,
			captions: [cbt(:table_cap_good)],
			fields: ["<h1>#{@good.ident}</h1><br><h4>#{desc}</h4>"],
			foots: [" --- "]
		) %>
	</div>

	<div class="tablewrap decorated_wrap">

		<%= render('layouts/table', 
			object: @good,
			captions: [cbt(:table_cap_kngroup)],
			fields: ["<h2><span class=\"to_clipboard\" id=\"show_good_local_taric_kncode\">#{num_to_kncode(@good.kncode)}</span><b class=\"copy_to_clipboard\" data-clipboard-action=\"copy\" data-clipboard-target=\"#show_good_local_taric_kncode\">âœ‚</b></h2><br><h3>#{@good.kncode_description}</h3>"],
			foots: [" --- "]
		) %>

	</div>

	<br>

	<div class="tablewrap decorated_wrap">

		<%= render('layouts/table', 
			object: @good.impexpcompanies,
			captions: [cbt(:table_cap_clients)],
			fields: [:company_name],
			foots: [cbt(:table_cap_clients_count) + @good.impexpcompanies.size.to_s],
			html_class: "rows_colored"
		) %>

	</div>
	
	<%= render('goods/goodslist/item_details_manufacturers',
		makers: @good.manufacturers
	) %>
	
	<%= render 'goods/goodslist/item_details_uoms_calculator' if !@good.uoms.blank? %>

</section>

<section class="calculator_list">

	<%= render 'layouts/calculator_list' if !@MEM.uomscalc.blank? %>
	
</section>
