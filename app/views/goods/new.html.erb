
<%= render 'layouts/base/main_menu' %>

<section class="form">

	<%= form_for @record do |t| %>

		<%= new_edit(
			obj: t,
			fields: {
				ident: { 
					prefill_from_mem_param: [:ident_or_description_cont, :ident_cont],
					autofocus: true
				},
				description: { 
					type: :text_area,
					prefill_from_mem_param: [:ident_or_description_cont, :description_cont]
				}
			}
		) %>

		<%= new_edit(
			obj: t,
			assoc: :local_taric,
			fields: {
				kncode: {  },
				description: { 
					type: :text_area
				}
			}
		) %>

		<%= new_edit(
			obj: t,
			assoc: :impexpcompanies,
			fields: {
				company_name: {  }
			}
		) %>

		<%= new_edit(
			obj: t,
			assoc: :manufacturers,
			fields: {
				name: {  }
			}
		) %>

		<aside>
			<%= t.fields_for :uoms, @uom do |u| %>
				<%= render('goods/new/uom',
					obj: u
				) %>
			<% end %>
		</aside>

		<%= new_edit(obj: t, type: :submit) %>

	<% end %>

</section>
