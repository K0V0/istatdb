
<%= render 'layouts/main_menu' %>

<%= render 'layouts/actions' if @administrative_mode %>

<%= render 'goods/goodslist/search' %>

<% if @result.length > 0 %>

	<%= render('layouts/items_table',

		fields: {
			ident: {
				is_sortlink: true,
				is_highlighted: true,
				is_link: true
			},
			description: {
				is_highlighted: true,
				is_multiple_with: :ident
			},
			kncode: {
				is_sortlink: true,
				call_function: "num_to_kncode"
			}
		}

	) %>

<% else %>
	
	<%= render "goods/goodslist/item_no_results", items: @result %>

<% end %>

