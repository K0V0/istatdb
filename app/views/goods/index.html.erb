
<%= render 'layouts/base/main_menu' %>

<%= render 'layouts/shared/items_actions' if @administrative_mode %>

<%= render 'goods/goodslist/search' %>

<% if @result.length > 0 %>

	<%= render('layouts/shared/items_table',

		fields: [
			ident: {
				is_sortlink: true,
				is_highlighted: true,
				is_link: {
					remote: true
				}
			},
			description: {
				is_highlighted: true,
				is_multiple_with: :ident
			},
			local_taric: [
				kncode: {
					call_decorator: :num_to_kncode,
					is_link: true
				},
				description: {
					
				}
			]
		]

	) %>

<% else %>
	
	<%= render "goods/goodslist/item_no_results", items: @result %>

<% end %>

