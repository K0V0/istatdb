<% content_for :show_content do %>

	<%= render('layouts/shared/show_item_basic_info',
		fields: [
			[:full_name, :email, :phone],
			[
				[:impexpcompany, :company_name]
			]
		]
	) %>

	<%= render('layouts/shared/items_table',

		object: @for_manufacturerstable,

		fields: {
			name: {
				is_link: true
			}
		},

		options: [
			caption: true,
			foot: true,
			html_options: {
				main_class: "shrinked"
			},
			not_editable: true,
			change_on_smallscreen: true
		]

	) %>

<% end %>