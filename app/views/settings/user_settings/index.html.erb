<%= render 'layouts/base/main_menu' %>

<% content_for :items_table do %>

<section class="decorated_wrap shrinked change_on_smallscreen">

	<table class="rows_colored no_line_height">

		<caption>
			<%= t 'settings.users.user' %>
		</caption>

		<tbody>
			<tr>
				<td>
					<h1><%= current_user.email %></h1>
					<h2>---</h2>
				</td>
			</tr>
		</tbody>

		<tfoot>
			<tr>
				<td>
					&nbsp;
				</td>
			</tr>
		</tfoot>

	</table>

</section>

<section class="decorated_wrap shrinked change_on_smallscreen">

	<table class="for_forms">

		<caption>
			<%= t 'settings.users.actions' %>
		</caption>

		<tbody>
			<tr>
				<td class="buttons">
					<%= link_to(
						t('settings.users.logout'),
						destroy_user_session_path,
						method: :delete,
						class: "button danger"
					) %>
					<%= link_to(
						t('user.change_pass'),
						edit_user_registration_path,
						class: "button"
					) %>
				</td>
			</tr>
		</tbody>

		<tfoot>
			<tr>
				<td></td>
			</tr>
		</tfoot>

	</table>

</section>

<% end %>

