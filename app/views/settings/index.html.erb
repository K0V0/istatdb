
<%= render 'layouts/base/main_menu' %>

<article class="settings">

	<%= form_tag settings_path, remote: true do %>

		<%= settings(
			section: :gui,

			settings: {

				per_page: {
					type: :select,
					options: {
						1 => "1",
						5 => "5",
						10 => "10",
						15 => "15",
						20 => "20",
						25 => "25",
						50 => "50",
						100 => "100"
					}
				},

				show_footer: {
					type: :switch
				},

				enable_3d: {
					type: :switch
				},

				pin_searchbar: {
					type: :switch
				}
			}
		) %>

		<%= settings(
			section: :behavior,

			settings: {

				submit_by_enter: {
					type: :switch
				},

				autosubmit: {
					type: :switch
				},

				autosubmit_delay: {
					type: :select,
					options: {
						250 => "250",
						350 => "350",
						500 => "500",
						750 => "750",
						1000 => "1000",
						1500 => "1500",
						2000 => "2000"
					}
				},
			}
		) %>

		<%= settings(
			section: :backup,
			only_admin: true,

			settings: {

				adress: {
					type: :text
				},
				port: {
					type: :text
				},
				user: {
					type: :text
				},
				pass: {
					type: :text
				},
				root: {
					type: :text
				},
				enabled: {
					type: :switch
				}
			}
		) %>

		<%= settings(
			section: :valuts,
			only_admin: true,

			settings: {

				adress_daily: {
					type: :text
				},

				adress_history: {
					type: :text
				}
			}
		) %>

		<section class="decorated_wrap shrinked change_on_smallscreen">

			<table class="for_forms">

				<caption>
					<%= t 'settings.general.backup.actions_window_title' %>
				</caption>

				<tbody>
					<tr>
						<td class="buttons">
							<%= link_to(
								t('settings.general.backup.do_backup'),
								db_backup_path(noncancellable_flash: true),
								data: { 
									confirmation: t('actions.wait_until_backup'),
									is_only_notice: "1"
								},
								method: :post,
								class: "button"
							) %>
							
						</td>
					</tr>
				</tbody>

				<tfoot>
					<tr>
						<td></td>
					</tr>
				</tfoot>

			</table>

		</section>

	<% end %>

</article>




