<%= render 'settings/shared/settings_submenu' %>

<%= render 'layouts/base/main_menu' %>

<article class="settings">

	<%= form_tag settings_path, remote: true do %>

		<%= settings(
			section: :gui,

			settings: {

				per_page: {
					type: :select,
					options: {
						1 => "1",
						5 => "5",
						10 => "10",
						20 => "20",
						25 => "25",
						50 => "50",
						100 => "100"
					}
				},

				show_footer: {
					type: :switch
				},

				enable_3d: {
					type: :switch
				}
			}
		) %>

	<% end %>

</article>




