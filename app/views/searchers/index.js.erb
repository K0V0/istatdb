
<% if !params.has_key? :render_part %>

    $('article.searchers').empty();

    <% if [@goods, @local_tarics, @manufacturers].any? { |r| !r.empty? } %>

        $('article.searchers')
            .append("<%=j render 'searchers/shared/tables/goods' %>")
            .append("<%=j render 'searchers/shared/tables/manufacturers' %>")
            .append("<%=j render 'searchers/shared/tables/local_tarics' %>");

    <% else %>

        $('article.searchers')
            .append("<%=j render 'searchers/shared/tables/no_results' %>");

    <% end %>

<% else %>

    var partial = $("<%=j render "searchers/shared/tables/#{params[:render_part]}" %>");
    var window_id = "<%= params[:render_part] %>";
    var parent = $('#'+window_id).closest('div.content');
    var new_content = partial.find('#'+window_id);

    parent.empty();
    parent.append(new_content);

<% end %>
