
<%= render 'layouts/main_menu' %>

<%= render 'manufacturers/manufacturerslist/search' %>

<%= render 'layouts/actions' if @administrative_mode %>

<% if @result.length > 0 %>

	<%= render('layouts/items_table',

		fields: {
			name: {
				is_sortlink: true,
				is_highlighted: true,
				is_link: true
			},
			taric_codes: {
				numbering: true,
				wrap: true,
				call_function: "num_to_kncode"
			},
			goods_manufacturers_count: {

			},
			intrastat_clients: {
				wrap: true,
				numbering: true
			}, 
			incoterm_shortlands: {
				wrap: true,
				numbering: true
			}
		}
	) %>

<% else %>

	<%= render(
		'layouts/items_table_no_results',
		items: @result,
		err_message: :manufacturer_search_no_results
	) %>

<% end %>