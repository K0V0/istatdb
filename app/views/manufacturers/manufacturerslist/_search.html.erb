
<% content_for :search_bar do %>

	<section class="search_bar"> 

		<%= search_form_for @search,
			url: search_manufacturers_path,
			class: "decorated_wrap",
			remote: true do |s| %> 

			<div>
				<%= s.label :name %>
				<%= s.search_field :name_cont, autocomplete: "off" %>
			</div>

			<%= render 'manufacturers/manufacturerslist/search_select_client', obj: s %>

			<%= s.hidden_field :s, value: (params.deep_has_key?(:q, :s) ? params[:q][:s] : nil) %>

			<%#= hidden_field_tag :page, @MEM.page %>

			<%= hidden_field_tag :administrative_mode, @administrative_mode %>

			<%= hidden_field_tag(:preserve_checked, "") if @administrative_mode %>

			<div>
				<%= render 'layouts/action_add_new' %>

				<%= render 'layouts/action_go_to_administrative_mode' %>

				<button id="clear_search" class="button">
					<%= t :clear_search %>
				</button>

				<button id="reset_search" class="button">
					<%= t :reset_search %>
				</button>

				<%= render 'layouts/action_search_or_back', s: s %>
			</div>

		<% end %>

	</section>

<% end %>