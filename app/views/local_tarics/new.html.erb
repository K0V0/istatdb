
<%= render 'layouts/main_menu' %>

<section class="form">

	<%  url = update_local_taric_path if action_name == "edit"
		url = create_local_taric_path if action_name == "new" %>

	<%= form_for @local_taric, url: url do |t| %>

		<article class="decorated_wrap shrinked">

			<%= render('layouts/new_select_section', 
				obj: t,
				input_fields: { 
					kncode: {
						required: true,
						autocomplete: false,
						reset_button: :all,
						autofocus: true
					},
					description: {
						required: false,
						autocomplete: false,
						type: :textarea
					}
				},
			) %>

		</article>

		<article class="decorated_wrap shrinked">

			<div>
				<%= t.submit %>
			</div>

		</article>

	<% end %>

</section>