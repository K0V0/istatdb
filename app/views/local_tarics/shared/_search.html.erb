<% content_for :search_bar do %>

	<section class="search_bar"> 

		<%= search_form_for @search, 
			url: search_local_tarics_path,
			remote: true,
			class: "decorated_wrap" do |s| %> 

			<div>
				<%= s.label :kncode %>
				<%= s.search_field :kncode_start, autocomplete: "off", autofocus: "autofocus" %>
			</div>

			<div>
				<%= s.label :description %>
				<%= s.search_field :description_cont, autocomplete: "off" %>
			</div>

			<div>

				<%= render 'layouts/shared/actions/add_new_button' %><!--

				--><button id="clear_search" class="button">
					<%= t 'search.clear' %>
				</button><!--

				--><%= render 'layouts/shared/actions/go_to_administrative' %><!--

				--><%= render('layouts/shared/actions/search_or_back_button', s: s) %>

			</div>

		<% end %>

	</section>

<% end %>